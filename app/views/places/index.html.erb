

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Find a little Tiki, wherever you are
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Looking for some liquid aloha?
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider3.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Tresspassers will be offered a shot!
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>


<div class="clearfix"></div>
<br />
<div class="center">

    <%= paginate @places %>

</div>





<% @places.each do |place| %>
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="hut"><%= link_to place.name, place_path(place) %></h1>
  <h4 class="address"><%= place.address %></h4><br />
  <p><%= place.description %></p> <br />

  <!--  <% if place.user.present? %>
  <small><%= place.user.email %></small>
  <% end%> -->

  <% if place.comments.present? %>
  <div class="col-xs-12">
    <blockquote>
      <%= place.comments.last.message %> <br />
      <% if place.comments.last.humanized_rating.present? %>
      <span class="star"><%= place.comments.last.humanized_rating %></span>
      <span class="small"><%= place.comments.last.user.email %></span>
      <% end %>
    </blockquote>
  </div>
  <% end %>
</div>

<% end %>
<br  />
<div class="clearfix"></div>
<div class="center">
  <div class="pagination">
    <%= paginate @places %>
  </div>
</div>
<br />
