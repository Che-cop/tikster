<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="hut"><%= @place.name %></h1>
  <h4 class="address"><%= @place.address %></h4><br />
  <p><%= @place.description %></p> <br />

  <% if @place.latitude.present? && @place.longitude.present? %>

  <script>

  function initMap() {
    var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 13,
      center: myLatLng
    });

    var marker = new google.maps.Marker({
      position: myLatLng,
      map: map,
      title: 'Hello World!'
    });
  }
  </script>
  <script async defer
  src="https://maps.googleapis.com/maps/api/js?signed_in=true&callback=initMap">
  </script>

  <div id="map"></div>
  <br />
  <% end %>
  <div class="pull-left">
    <% if current_user && current_user == @place.user %>
    <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-sm btn-tiki'%>
    <%= link_to 'Destroy', place_path(@place), method: :delete, title: 'Delete', data: {confirm: 'Are you sure you want to delete this place?', commit:'Delete'}, class: 'btn btn-sm btn-tiki'%>
    <% end %>

  </div>


  <div class="clearfix"></div>


  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Add A Comment</h4>
        </div>
        <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
        <div class="modal-body">
          <%= f.input :message, label: 'Comment', placeholder: 'What\'s your favorite thing about this place?' %>
          <%= f.input :rating, as: :select, collection: Comment::RATINGS %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          <%= f.submit "Add Comment", class: 'btn btn-tiki' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <br />
  <div class="col-xs-10 col-xs-offset-1">
    <h2 class = "hut pull-left">Comments</h2>
    <button class="btn btn-tiki pull-right" data-toggle="modal" data-target="#myModal">
      Add a Comment
    </button>
  </div>

    <div class="clearfix"></div>
        <% @place.comments.each do |comment| %>
    <div class="col-xs-12 col-sm-6">
      <blockquote>
        <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b> -
        <% end %>
        <%= comment.message %>
        <small class="right"><%= comment.user.email %></small>
      </blockquote>
    </div>
    <% end %>


  </div>
</div>
