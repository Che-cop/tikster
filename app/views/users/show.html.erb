

<div class="booyah-box">
  <div class="col-xs-4">
    <%= image_tag 'tikimask.jpg', id: 'user-pic' %>
  </div>

  <div class="col-xs-8">
    <h1 class="hut"><%= @user.email %></h1>
    <h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
    <h4><%= @user.places.count %> places added</h4>
    <h4><%= @user.comments.count %> total comments</h4>
    <h4><%= @user.comments.where(rating: '5_stars').count %> 5-Star Ratings</h4>
  </div>
  <div class="clearfix">

  </div>
</div>
